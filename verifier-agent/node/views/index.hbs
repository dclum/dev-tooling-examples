<html>
  <head>
    <meta charset='utf-8' />
    <title>GlobaliD Verification Demo</title>
    <link rel='stylesheet' href='style.css' type='text/css' />
    <link rel='stylesheet' href='spinner.css' type='text/css' />
    <link rel='stylesheet' href='json-colorise.css' type='text/css' />
    <script src='json-colorise.js'></script>
    <script src='websocket.js'></script>
    <script>webSocketHandler('{{trackingId}}')</script>
    <script type="text/javascript" src="https://unpkg.com/qr-code-styling@1.5.0/lib/qr-code-styling.js"></script>
    <script src='qr-code.js'></script>
  </head>
  <body class='flex-center-center flex-column' onload="generateStyledQRCode('{{qrCodeURL}}', 'qr-code')">
    <div class='brand'><img src='../gid-logo.svg' alt='GlobaliD logo' /></div>
    <div class='card'>
      <p class='card-label'>Verifier agent Demo</p>
      <h1 id="card-title" class='card-title'>Verifiable Presentation Request</h1>
      <div class='card-focus'>
        <p id="sub-heading" class='card-focus-text'>
          Scan the QR with your GlobaliD mobile app
        </p>
      </div>
      <div id="main-container">
        <div id="qr-code"></div>
      </div>
    </div>
  </body>
</html>
