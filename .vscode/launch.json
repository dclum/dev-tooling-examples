{
  "configurations": [
    {
      // Run command "npm run start:debug OR start:debug:nodemon" first!
      "type": "node",
      "request": "attach",
      "name": "Attach NestJS Debugger",
      "port": 9229,
      "restart": true,
      "stopOnEntry": false,
      "protocol": "inspector"
    },
    {
      "name": "Debug Jest in globalid-connect --watch",
      "type": "node",
      "request": "launch",
      "runtimeArgs": [
        "--inspect-brk",
        "${workspaceRoot}/globalid-connect/node/node_modules/jest/bin/jest.js",
        "--runInBand",
        "--config",
        "${workspaceRoot}/globalid-connect/node/test/jest.config.json",
        "--watch"
        // you can add filters here to run specific tests
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "port": 9229
    },
    {
      "name": "Debug Jest E2E in globalid-connect --watch",
      "type": "node",
      "request": "launch",
      "runtimeArgs": [
        "--inspect-brk",
        "${workspaceRoot}/globalid-connect/node/node_modules/jest/bin/jest.js",
        "--runInBand",
        "--config",
        "${workspaceRoot}/globalid-connect/node/test/jest-e2e.json",
        "--watch"
        // you can add filters here to run specific tests
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "port": 9229
    }
  ]
}
